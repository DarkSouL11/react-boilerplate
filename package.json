    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "dotenv": "^8.2.0",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.0.2",
    "eslint-loader": "^3.0.2",
